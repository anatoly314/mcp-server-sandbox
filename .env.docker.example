# Docker Compose Environment Configuration
# Copy this to .env for docker-compose

# MCP Server Configuration
MCP_SERVER_NAME=mcp-server-docker
MCP_SERVER_VERSION=1.0.0

# Transport Configuration
TRANSPORT_TYPE=http
HTTP_HOST=0.0.0.0
HTTP_PORT=3000

# ============================================================================
# REQUIRED: Public URL
# The URL where this server is accessible
# ============================================================================
PUBLIC_URL=http://localhost:3000

# OAuth Configuration (optional)
#AUTH_ENABLED=true
#OAUTH_ISSUER_URL=https://your-oauth-provider.com

# Service Documentation URL (optional)
#SERVICE_DOCUMENTATION_URL=https://github.com/your-org/your-mcp-server

# Security (optional)
#FILTER_BY_IP=127.0.0.1,172.0.0.0/8
#ALLOWED_EMAILS=test@example.com,admin@company.org

# Logging
REQUEST_LOGGING=true