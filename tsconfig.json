{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Add these for better debugging:
    "inlineSources": true,        // Embeds TypeScript source in the source maps
    "inlineSourceMap": false,      // Keep as false - external maps work better with WebStorm
    "sourceRoot": "/"              // Helps with source map path resolution
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}