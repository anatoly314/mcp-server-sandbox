{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,    // Enable decorators
    "emitDecoratorMetadata": true,     // Enable decorator metadata

    // Stricter checks for code quality
    "noUnusedLocals": true,        // Error on unused local variables
    "noUnusedParameters": true,    // Error on unused function parameters
    "noImplicitReturns": true,     // Error when not all code paths return
    "noFallthroughCasesInSwitch": true, // Error on fallthrough in switch statements
    // Note: TypeScript doesn't have built-in checking for unused private methods/properties
    // Consider using ESLint with @typescript-eslint/no-unused-private-class-members rule

    // Add these for better debugging:
    "inlineSources": true,        // Embeds TypeScript source in the source maps
    "inlineSourceMap": false,      // Keep as false - external maps work better with WebStorm
    "sourceRoot": "/"              // Helps with source map path resolution
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}