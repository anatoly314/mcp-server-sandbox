# MCP Server Configuration
MCP_SERVER_NAME=mcp-server-starter
MCP_SERVER_VERSION=1.0.0

# Transport Configuration
TRANSPORT_TYPE=http
HTTP_HOST=0.0.0.0
HTTP_PORT=3000

# OAuth Configuration - CLERK
AUTH_ENABLED=true
OAUTH_PROXY_ENABLED=true
OAUTH_PROVIDER=clerk

# ============================================================================
# !!! REQUIRED: Replace YOUR_CLERK_DOMAIN with your actual Clerk domain !!!
# Example: If your Clerk app is "happy-dog-123", use: happy-dog-123
# Find it in Clerk Dashboard > API Keys > Frontend API URL
# ============================================================================

# Clerk OAuth endpoints - Configured for related-griffon-31
OAUTH_AUTHORIZATION_URL=https://related-griffon-31.clerk.accounts.dev/oauth/authorize
OAUTH_TOKEN_URL=https://related-griffon-31.clerk.accounts.dev/oauth/token
OAUTH_USERINFO_URL=https://related-griffon-31.clerk.accounts.dev/oauth/userinfo

# Dynamic Client Registration (DCR) endpoints
# !!! IMPORTANT: Enable DCR in Clerk Dashboard:
# OAuth Applications > Enable "Dynamic client registration" toggle !!!
OAUTH_REGISTRATION_URL=https://related-griffon-31.clerk.accounts.dev/oauth/register
OAUTH_REVOCATION_URL=https://related-griffon-31.clerk.accounts.dev/oauth/revoke

# OAuth scopes
OAUTH_SCOPES=openid email profile

# Provider name for logging
OAUTH_PROVIDER_NAME=clerk

# No OAuth credentials needed when using Clerk with DCR
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REDIRECT_URI=

# Public URL (for OAuth callbacks when deployed)
#PUBLIC_URL=https://dev.anatoly.dev
PUBLIC_URL=http://localhost:3000

# IP Filtering (optional, comma-separated IPs or CIDR ranges)
# FILTER_BY_IP=127.0.0.1,192.168.1.0/24

# Email Filtering (optional, comma-separated emails)
# When set, only these emails can access the MCP server after OAuth authentication
# Leave empty or commented to allow all authenticated users
#ALLOWED_EMAILS=test@example.com,admin@company.org